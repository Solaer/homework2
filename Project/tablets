CREATE TABLE users (
    id INT(10) NOT NULL AUTO_INCREMENT PRIMARY KEY COMMENT "id пользователя",
    user_name VARCHAR(25) NOT NULL COMMENT "имя пользователя будет состоять из уникального 25 значного кода состояшего из цифр и букв",
    email VARCHAR(100) NOT NULL UNIQUE COMMENT "электроная почта",
    created_at DATETIME DEFAULT CURRENT_TIMESTAMP COMMENT "когда был создан аккаунт",
    updated_at DATETIME DEFAULT CURRENT_TIMESTAMP,
    prime CHAR(1) NOT NULL COMMENT "Показывает тип подписки где N - примиума нет, S - студенчиский тариф, P - премиум обычный, F - семейная подписка"
) COMMENT "данные о пользователе";

CREATE TABLE profiles (
	user_id INT UNSIGNED NOT NULL PRIMARY KEY,
	name VARCHAR(25) NOT NULL COMMENT "тут уже будет то имя которое введет пользоваетль",
	country VARCHAR(130),
	gender CHAR(1) NOT NULL, 
	birthday DATE,
	created_at DATETIME DEFAULT CURRENT_TIMESTAMP,
	updated_at DATETIME DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP
);

CREATE TABLE music (
	id INT(10) NOT NULL AUTO_INCREMENT PRIMARY KEY,
	name VARCHAR(25) NOT NULL,
	autro VARCHAR(25) NOT NULL COMMENT "Автор песен",
	album VARCHAR(25) NOT NULL COMMENT "Альбом",
	duration INT(3) NOT NULL COMMENT "Пролдолжительность песни",
	gener VARCHAR(25) NOT NULL,
	likes INT(10) NOT NULL,
	lithening INT(10) NOT NULL,
	created_at DATETIME DEFAULT CURRENT_TIMESTAMP
);

CREATE TABLE albums (
	id INT(10) NOT NULL AUTO_INCREMENT PRIMARY KEY,
	name VARCHAR(25) NOT NULL,
	aurto VARCHAR(25) NOT NULL,
	musics_id INT UNSIGNED NOT NULL,
	likes INT(10) NOT NULL,
	created_at DATETIME DEFAULT CURRENT_TIMESTAMP,
	updated_at DATETIME DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP
);

CREATE TABLE autors (
	id INT(10) NOT NULL AUTO_INCREMENT PRIMARY KEY,
	name VARCHAR(25) NOT NULL,
	album_id INT UNSIGNED NOT NULL,
	music_id INT UNSIGNED NOT NULL,
	created_at DATETIME DEFAULT CURRENT_TIMESTAMP,
	updated_at DATETIME DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP,
	subscride INT(10) NOT NULL
);

CREATE TABLE likes (
	id INT(10) NOT NULL AUTO_INCREMENT PRIMARY KEY,
	user_id INT UNSIGNED NOT NULL,
	target_id INT UNSIGNED NOT NULL,
  	target_type_id INT UNSIGNED NOT NULL,
  	created_at DATETIME DEFAULT CURRENT_TIMESTAMP
);

CREATE TABLE target_types (
  id INT UNSIGNED NOT NULL AUTO_INCREMENT PRIMARY KEY,
  name VARCHAR(255) NOT NULL UNIQUE,
  created_at DATETIME DEFAULT CURRENT_TIMESTAMP
);

CREATE TABLE geners (
	id INT UNSIGNED NOT NULL AUTO_INCREMENT PRIMARY KEY,
	name VARCHAR(255) NOT NULL UNIQUE,
	created_at DATETIME DEFAULT CURRENT_TIMESTAMP
);

CREATE TABLE prime_status (
	id INT UNSIGNED NOT NULL AUTO_INCREMENT PRIMARY KEY,
	name VARCHAR(255) NOT NULL UNIQUE,
	created_at DATETIME DEFAULT CURRENT_TIMESTAMP
);

CREATE TABLE subscrise (
	id INT(10) NOT NULL AUTO_INCREMENT PRIMARY KEY,
	user_id INT UNSIGNED NOT NULL,
	autors_id INT UNSIGNED NOT NULL,
  	created_at DATETIME DEFAULT CURRENT_TIMESTAMP
);
